<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textViewLeft"
        android:layout_width="match_parent"
        android:layout_height="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/ivLeftEye"
        android:text="Ľavé oko"
        android:textAlignment="center" />

    <ImageView
        android:id="@+id/ivLeftEye"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewLeft"
        app:layout_constraintBottom_toTopOf="@+id/textViewRight" />

    <TextView
        android:id="@+id/tvNoLeftEye"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        app:layout_constraintStart_toStartOf="@id/ivLeftEye"
        app:layout_constraintEnd_toEndOf="@id/ivLeftEye"
        app:layout_constraintTop_toTopOf="@id/ivLeftEye"
        app:layout_constraintBottom_toBottomOf="@id/ivLeftEye"
        android:text="Nenašlo sa ľavé oko s červeným pozadím"
        android:textColor="@color/red_bright"
        android:textAlignment="center"
        />

    <TextView
        android:id="@+id/textViewRight"
        android:layout_width="match_parent"
        android:layout_height="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ivLeftEye"
        app:layout_constraintBottom_toTopOf="@+id/ivRightEye"
        android:text="Pravé oko"
        android:textAlignment="center"
        />

    <ImageView
        android:id="@+id/ivRightEye"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="@+id/btnUploadIrises"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewRight" />

    <TextView
        android:id="@+id/tvNoRightEye"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        app:layout_constraintStart_toStartOf="@id/ivRightEye"
        app:layout_constraintEnd_toEndOf="@id/ivRightEye"
        app:layout_constraintTop_toTopOf="@id/ivRightEye"
        app:layout_constraintBottom_toBottomOf="@id/ivRightEye"
        android:text="Nenašlo sa pravé oko s červeným pozadím"
        android:textColor="@color/red_bright"
        android:textAlignment="center"
        />

    <Button
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/btnUploadIrises"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ivRightEye"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="Ďalej"
        />



</androidx.constraintlayout.widget.ConstraintLayout>